{
  "name": "EasySale Dark",
  "version": "1.0.0",
  "layout": {
    "template": "centeredWithStatus",
    "slots": {
      "header": {
        "enabled": true,
        "components": ["logo"]
      },
      "left": {
        "variant": "none"
      },
      "main": {
        "variant": "centered"
      },
      "footer": {
        "enabled": true,
        "components": ["version", "copyright"]
      }
    },
    "responsive": {
      "breakpoints": {
        "mobile": 320,
        "tablet": 768,
        "desktop": 1024,
        "kiosk": 1920
      },
      "stackOnMobile": true
    }
  },
  "tokens": {
    "colors": {
      "surface": {
        "primary": "rgba(15, 30, 45, 0.85)",
        "secondary": "rgba(20, 40, 60, 0.9)",
        "tertiary": "rgba(30, 55, 80, 0.8)"
      },
      "text": {
        "primary": "#e2e8f0",
        "secondary": "#94a3b8",
        "tertiary": "#64748b",
        "inverse": "#0f172a"
      },
      "border": {
        "default": "rgba(100, 150, 180, 0.2)",
        "focus": "#3b82f6",
        "error": "#ef4444"
      },
      "accent": {
        "primary": "#3b82f6",
        "hover": "#60a5fa",
        "active": "#2563eb"
      },
      "status": {
        "success": "#22c55e",
        "warning": "#f59e0b",
        "error": "#ef4444",
        "info": "#3b82f6"
      }
    },
    "typography": {
      "fontFamily": {
        "primary": "Inter, system-ui, -apple-system, sans-serif",
        "monospace": "Fira Code, Consolas, monospace"
      },
      "fontSize": {
        "xs": "0.75rem",
        "sm": "0.875rem",
        "base": "1rem",
        "lg": "1.125rem",
        "xl": "1.25rem",
        "xxl": "1.5rem"
      },
      "fontWeight": {
        "normal": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700
      },
      "lineHeight": {
        "tight": 1.25,
        "normal": 1.5,
        "relaxed": 1.75
      }
    },
    "spacing": {
      "scale": {
        "xs": "0.25rem",
        "sm": "0.5rem",
        "md": "1rem",
        "lg": "1.5rem",
        "xl": "2rem",
        "xxl": "3rem"
      },
      "density": "comfortable"
    },
    "shadows": {
      "elevation": {
        "none": "none",
        "sm": "0 2px 8px rgba(0, 0, 0, 0.3)",
        "md": "0 4px 16px rgba(0, 0, 0, 0.4)",
        "lg": "0 8px 32px rgba(0, 0, 0, 0.5)",
        "xl": "0 16px 48px rgba(0, 0, 0, 0.6)"
      }
    },
    "blur": {
      "backdrop": {
        "none": "none",
        "sm": "blur(8px)",
        "md": "blur(16px)",
        "lg": "blur(24px)"
      },
      "enabled": true
    },
    "radius": {
      "card": "16px",
      "input": "8px",
      "button": "8px",
      "pill": "9999px"
    }
  },
  "components": {
    "authCard": {
      "methods": ["password", "pin"],
      "showStorePicker": false,
      "showStationPicker": false,
      "showDeviceIdentity": false,
      "showDemoAccounts": false,
      "glassmorphism": true,
      "elevation": "lg"
    },
    "statusCard": {
      "variant": "systemForward",
      "showDatabaseStatus": true,
      "showSyncStatus": true,
      "showLastSync": true,
      "showStoreInfo": true,
      "showStationInfo": true,
      "glassmorphism": true
    },
    "header": {
      "showLogo": true,
      "showEnvironmentSelector": false,
      "showHelpMenu": false,
      "companyName": "EasySale",
      "transparent": true
    },
    "footer": {
      "showVersion": true,
      "showBuild": true,
      "showCopyright": true,
      "copyrightText": "Â© 2026 EasySale. All rights reserved.",
      "transparent": true
    },
    "errorCallout": {
      "presentation": "callout",
      "showRetryAction": true,
      "showDiagnosticsAction": false
    }
  },
  "background": {
    "type": "gradient",
    "gradient": {
      "stops": [
        {
          "color": "#0a1929",
          "position": 0
        },
        {
          "color": "#0d2137",
          "position": 50
        },
        {
          "color": "#0f2942",
          "position": 100
        }
      ]
    },
    "overlay": {
      "enabled": true,
      "type": "noise",
      "opacity": 0.03
    }
  }
}
