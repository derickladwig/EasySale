      "searchFields": ["category", "voltage"]
    },
    {
      "id": "plumbing",
      "name": "Plumbing",
      "icon": "Droplet",
      "color": "#06b6d4",
      "description": "Plumbing supplies and fixtures",
      "attributes": [
        { "name": "category", "label": "Category", "type": "dropdown", "values": ["Pipe", "Fitting", "Valve", "Fixture", "Drain"], "required": true },
        { "name": "material", "label": "Material", "type": "dropdown", "values": ["PVC", "Copper", "PEX", "Brass", "Stainless Steel"] },
        { "name": "size", "label": "Size", "type": "text", "required": true },
